# Production Docker Deployment Configuration
# Copy this file to .env and modify the values for your production environment

# Application Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Public URL for external access (replace with your domain/IP)
PUBLIC_API_URL=http://192.168.1.100:3000

# MinIO Connection for the app
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Bucket settings
MINIO_BUCKET_NAME=charts
# Control whether the service attempts to auto-create the bucket on startup
# Set to 'false' when using a restricted MinIO account
MINIO_AUTO_CREATE_BUCKET=false

# MinIO External Access Configuration - IMPORTANT for Docker deployment
# These settings ensure that generated chart URLs use your server's IP/domain instead of container names
MINIO_EXTERNAL_ENDPOINT=192.168.1.100
MINIO_EXTERNAL_PORT=9000

# MinIO server admin (used by Docker minio service)
# Change these in production
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
