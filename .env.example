# Application Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Public URL for external access (used in Swagger docs and logs)
# Replace with your actual domain/IP when deploying
# Examples:
# PUBLIC_API_URL=http://192.168.1.100:3000  # Local network
# PUBLIC_API_URL=https://api.yourdomain.com # Production domain
PUBLIC_API_URL=http://localhost:3000

# MinIO Connection
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key

# Bucket settings
MINIO_BUCKET_NAME=charts
# Control whether the service attempts to auto-create the bucket on startup
# Set to 'false' if your MinIO account lacks create-bucket/policy permissions
MINIO_AUTO_CREATE_BUCKET=true

# MinIO External Access Configuration (Docker/VM)
# Set these when deploying with Docker/VM to ensure URLs are accessible from outside
MINIO_EXTERNAL_ENDPOINT=localhost
MINIO_EXTERNAL_PORT=9000

# MinIO server admin (used by Docker minio service)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
