# Application Configuration (development)
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# Public URL for external access (used in Swagger docs and logs)
PUBLIC_API_URL=http://localhost:4000

# MinIO Connection (本地开发模式：连接 Docker 中的 minio)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Bucket settings
MINIO_BUCKET_NAME=charts
# Control whether the service attempts to auto-create the bucket on startup
# Set to 'false' when using a restricted MinIO account (no create-bucket/policy permissions)
MINIO_AUTO_CREATE_BUCKET=false

# External access for URL generation
MINIO_EXTERNAL_ENDPOINT=localhost
MINIO_EXTERNAL_PORT=9000

# MinIO server admin (used by Docker minio service)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin