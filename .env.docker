# Docker Compose 部署配置
# 用于 docker-compose up 时的完整容器化部署

# Application Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Public URL for external access
PUBLIC_API_URL=http://localhost:3000

# MinIO Connection (容器间通信使用服务名)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Bucket settings
MINIO_BUCKET_NAME=charts
MINIO_AUTO_CREATE_BUCKET=true

# External access for URL generation (外部访问地址)
# 本地测试使用 localhost，生产环境改为服务器实际 IP 或域名
# 例如：192.168.1.100 或 chart.example.com
MINIO_EXTERNAL_ENDPOINT=localhost
MINIO_EXTERNAL_PORT=9000

# MinIO server admin
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
